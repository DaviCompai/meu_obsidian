---json
{
  "permalink": "/feed.xml",
  "eleventyExcludeFromCollections": true
}
---
{%if meta.siteBaseUrl -%}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ meta.siteBaseUrl | trim }}">
    <title>{{ meta.siteName | escape }}</title>
    <link href="{{ (meta.siteBaseUrl | trim) + permalink }}" rel="self"/>
    <link href="{{ meta.siteBaseUrl | trim }}"/>
    <updated>{{ collections.note | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
    <id>{{ meta.siteBaseUrl | trim }}</id>
    <author><name>{{ meta.siteName | escape }}</name></author>
    {%- for note in collections.note | reverse %}
        <entry>
            <title>{% if note.title %}{{ note.title | escape }}{% else %}{{ note.fileSlug | escape }}{% endif %}</title>
            <updated>{%if note.data.updated %}{{ note.data.updated | dateToZulu }}{%else%}{{ note.date | dateToRfc3339 }}{%endif%}</updated>
            <id>{{ (meta.siteBaseUrl | trim) + (note.url | url) }}</id>
            <content type="html"><![CDATA[{{ note.templateContent | hideDataview | taggify | link | htmlToAbsoluteUrls(meta.siteBaseUrl) }}]]></content>
            <link href="{{ (meta.siteBaseUrl | trim) + (note.url | url) }}"/>
        </entry>
    {%- endfor %}
</feed>
{% endif %}
